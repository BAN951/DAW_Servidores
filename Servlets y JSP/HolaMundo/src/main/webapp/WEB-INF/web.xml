<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>BeforeAspect</filter-name>
        <filter-class>BeforeAspect</filter-class>
    </filter>
    <filter>
        <filter-name>AfterAspect</filter-name>
        <filter-class>AfterAspect</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>BeforeAspect</filter-name>
        <url-pattern>/AOPServlet</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AfterAspect</filter-name>
        <url-pattern>/AOPServlet</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HolaMundoXML</servlet-name>
        <servlet-class>HolaMundoXML</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servlet_test</servlet-name>
        <servlet-class>servlets.servlet_test</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdivinaColor</servlet-name>
        <servlet-class>AdivinaColor</servlet-class>
        <init-param>
            <param-name>color</param-name>
            <param-value>verde</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AOPServlet</servlet-name>
        <servlet-class>AOPServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HolaMundoXML</servlet-name>
        <url-pattern>/HolaMundoXML</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servlet_test</servlet-name>
        <url-pattern>/servlet_test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdivinaColor</servlet-name>
        <url-pattern>/AdivinaColor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AOPServlet</servlet-name>
        <url-pattern>/AOPServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
